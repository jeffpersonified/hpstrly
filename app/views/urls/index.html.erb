  </span>
</h1>

<h3 id="tagline">an analog url shortener</h3>

<%= render 'form' %>

<h3 id="links-margin">your links</h3>

<table class="table table-striped table-bordered table-hover">
    <tr>
      <th class="left-col">URL</th>
      <th>Shortened URL</th>
      <th class="right-col">Page Views</th>
    </tr>

    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original_url %></td>
        <td><%= link_to "hpstr.ly/#{url.short_url}", url.short_url, :target => "_blank" %></td>
        <td><%= url.page_views %></td>
      </tr>
    <% end %>
</table>

